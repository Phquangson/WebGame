                                                    <input type="text" class="qtyValue text-center m-0 xxltxt"
                                                           value="4">
                                                    <i class="fas fa-plus d-center increaseQty" style="align-content: center; padding-left: 7px"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="right-area d-flex flex-column align-items-end justify-content-between">
                                    <button type="button" class="end-area">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                    <span class="fs-seven">$300.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("PageStore","Home")" class="d-flex align-items-center fs-seven gap-1">
                        <i class="material-symbols-outlined"> chevron_left </i>
                        Continue Shopping
                    </a>
                </div>
                <div class="col-xl-4 col-md-8 mt-7 mt-xl-0">
                    <form action="checkout.html" class="checkout-form py-5 px-3">
                        <h2 class="visible-slowly-bottom mb-4 text-center">Check out</h2>
                        <div class="main-content py-4 py-sm-8 px-3 px-sm-5">
                            <ul>
                                <li class="d-center justify-content-between gap-2 fs-seven">
                                    <span>2 items</span>
                                    <span>$900</span>
                                </li>
                                <li class="d-center justify-content-between gap-2 fs-seven">
                                    <span>Shipping</span>
                                    <span>Free</span>
                                </li>
                            </ul>
                            <div class="promo-code my-6">
                                <div class="head-area">
                                    <p>Have a promo code?</p>
                                </div>
                                <div class="input-area p-1 d-flex align-items-center justify-content-between">
                                    <input type="text" class="ps-2" placeholder="Promo Code">
                                    <div class="btn-area">
                                        <button class="box-style text-nowrap btn-box">
                                            <a href="@Url.Action("PageCheckOut","Home")" style="color: black;"> Add</a>

                                        </button>
                                    </div>
                                </div>
                            </div>
                            <ul class="sub-total py-3">
                                <li class="d-center justify-content-between gap-2 fs-seven">
                                    <span>Total (tax incl.)</span>
                                    <span>$900</span>
                                </li>
                            </ul>
                        </div>
                        <div class="btn-area text-center mt-6">
                            <button class="box-style text-nowrap btn-box">
                                <a href="@Url.Action("PageCheckOut","Home")" style="color: black;"> Proceed to checkout</a>

                            </button>
                        </div>
                    </form>
                    <div class="footer-items mt-5 mt-sm-10 d-grid gap-3">
                        <p class="d-flex align-items-center gap-3">
                            <i class="material-symbols-outlined"> shield </i>
                            Secure payment
                        </p>
                        <p class="d-flex align-items-center gap-3">
                            <i class="material-symbols-outlined"> local_shipping </i>
                            Instant delivery
                        </p>
                        <p class="d-flex align-items-center gap-3">
                            <i class="material-symbols-outlined"> cached </i>
                            30-day money back guarantee for unused keys
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart Details end -->
</body>
</html>
